<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fragment_singleComplaint_commenterImage_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/homeland"
            android:contentDescription="@string/item_commenter_image_content_description" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/fragment_singleComplaint_commenterName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/fragment_singleComplaint_commenterName"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/cardView2" />

    <TextView
        android:id="@+id/fragment_singleComplaint_timeElapsed_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/fragment_singleComplaint_elapsedTime"
        android:textColor="#80231F20"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/fragment_singleComplaint_commenterName_tv"
        app:layout_constraintTop_toBottomOf="@+id/fragment_singleComplaint_commenterName_tv" />

    <TextView
        android:id="@+id/fragment_singleComplaint_commentBody_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/fragment_singleComplaint_commentBody"
        app:layout_constraintStart_toStartOf="@+id/fragment_singleComplaint_timeElapsed_tv"
        app:layout_constraintTop_toBottomOf="@+id/fragment_singleComplaint_timeElapsed_tv" />

    <TextView
        android:id="@+id/fragment_singleComplaint_reply_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/fragment_singleComment_reply"
        android:textColor="@color/dark_blue"
        app:layout_constraintStart_toStartOf="@+id/fragment_singleComplaint_commentBody_tv"
        app:layout_constraintTop_toBottomOf="@+id/fragment_singleComplaint_commentBody_tv" />

    <View
        android:id="@+id/fragment_singleComplaint_viewDIvider"
        android:layout_width="0dp"
        android:layout_height="0.8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="#A6545458"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fragment_singleComplaint_reply_tv"
        app:layout_constraintTop_toBottomOf="@+id/fragment_singleComplaint_reply_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>